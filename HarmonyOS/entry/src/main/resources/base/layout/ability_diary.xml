<?xml version="1.0" encoding="utf-8"?>
<StackLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <PageSlider
        ohos:id="$+id:Diary_page_slider"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:background_element="#00FFFFFF"
        ohos:layout_alignment="top"
        />

    <DependentLayout
        ohos:id="$+id:diarytopde"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="#F1F1F1"
        ohos:orientation="vertical">

        <Image
            ohos:id="$+id:diary_book"
            ohos:center_in_parent="true"
            ohos:align_parent_left="true"
            ohos:right_of="$id:Diary_tab_list"
            ohos:height="32vp"
            ohos:width="32vp"
            ohos:left_margin="20vp"
            ohos:image_src="$media:FANSIlog"
            ohos:scale_mode="stretch"
            />
    <TabList
        ohos:id="$+id:Diary_tab_list"
        ohos:align_parent_left="true"
        ohos:height="50vp"
        ohos:width="50vp"
        ohos:left_margin="60vp"
        ohos:background_element="#F0F0F0"
        ohos:layout_alignment="left"
        ohos:normal_text_color="#FF261F1F"
        ohos:selected_text_color="#f00056"
        ohos:text_size="23vp"
        ohos:text_alignment="center"
        ohos:fixed_mode="true"
        />

        <Image
            ohos:id="$+id:diaryadd_xin"
            ohos:left_of="$id:Diary_tab_list"
            ohos:center_in_parent="true"
            ohos:align_parent_right="true"
            ohos:height="32vp"
            ohos:width="32vp"
            ohos:right_margin="15vp"
            ohos:image_src="$media:writediary"
            ohos:scale_mode="stretch"
            ohos:weight="1"
            ohos:layout_alignment="center"
            />
    </DependentLayout>

    <DirectionalLayout
        ohos:id="$+id:ability_bottom_dir_d"
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="150px"
        ohos:width="match_parent"
        ohos:layout_alignment="bottom"
        ohos:orientation="horizontal"
        ohos:background_element="#FaFaFa">

        <DirectionalLayout
            xmlns:ohos="http://schemas.huawei.com/res/ohos"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:weight="1"
            ohos:orientation="vertical">

            <Button
                ohos:id="$+id:diary_home"
                ohos:height="150px"
                ohos:width="128px"
                ohos:layout_alignment="center"
                ohos:background_element="$media:bottom1"
                />

        </DirectionalLayout>

        <DirectionalLayout
            xmlns:ohos="http://schemas.huawei.com/res/ohos"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:weight="1"
            ohos:orientation="vertical">

            <Button
                ohos:id="$+id:diary_diary"
                ohos:height="150px"
                ohos:width="128px"
                ohos:layout_alignment="center"
                ohos:background_element="$media:bottom6"
                />

        </DirectionalLayout>

        <DirectionalLayout
            xmlns:ohos="http://schemas.huawei.com/res/ohos"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:weight="1"
            ohos:orientation="vertical">

            <Button
                ohos:id="$+id:diary_time"
                ohos:height="150px"
                ohos:width="128px"
                ohos:layout_alignment="center"
                ohos:background_element="$media:bottom3"
                />

        </DirectionalLayout>

        <DirectionalLayout
            xmlns:ohos="http://schemas.huawei.com/res/ohos"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:weight="1"
            ohos:orientation="vertical">

            <Button
                ohos:id="$+id:diary_mine"
                ohos:height="150px"
                ohos:width="128px"
                ohos:layout_alignment="center"
                ohos:background_element="$media:bottom4"
                />
        </DirectionalLayout>
    </DirectionalLayout>

</StackLayout>