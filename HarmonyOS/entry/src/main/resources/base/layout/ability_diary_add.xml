<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$media:diarybackground1"
    ohos:orientation="vertical">


    <DependentLayout
        ohos:id="$+id:moodtoptheme"
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:layout_alignment="bottom"
        ohos:orientation="horizontal"
        ohos:weight="1"
        ohos:background_element="#00F0F0F0">
        <Image
            ohos:id="$+id:mood_add_back"
            ohos:left_of="$id:dongtaitext"
            ohos:center_in_parent="true"
            ohos:align_parent_left="true"
            ohos:height="23vp"
            ohos:width="23vp"
            ohos:left_margin="10vp"
            ohos:right_margin="15vp"
            ohos:image_src="$media:topbarback"
            ohos:scale_mode="stretch"
            ohos:layout_alignment="center"
            />

        <Text
            ohos:id="$+id:diaryadd_topbar_diary"
            ohos:height="50vp"
            ohos:width="match_content"
            ohos:align_parent_left="true"
            ohos:left_margin="35vp"
            ohos:text="添加日记"
            ohos:text_color="#FF000000"
            ohos:text_size="18vp"
            ohos:text_alignment="center"
            />
        <Text
            ohos:id="$+id:diaryadd_topbar_date"
            ohos:height="50vp"
            ohos:width="match_content"
            ohos:right_margin="70vp"
            ohos:align_parent_right="true"
            ohos:text="日期"
            ohos:text_color="#FF000000"
            ohos:text_size="18vp"
            ohos:text_alignment="center"
            />
        <Text
            ohos:id="$+id:diaryadd_topbar_book"
            ohos:height="50vp"
            ohos:width="match_content"
            ohos:right_margin="130vp"
            ohos:align_parent_right="true"
            ohos:text="日记本"
            ohos:text_color="#FF000000"
            ohos:text_size="18vp"
            ohos:text_alignment="center"
            />
        <Image
            ohos:id="$+id:mood_add_save"
            ohos:left_of="$id:dongtaitext"
            ohos:center_in_parent="true"
            ohos:align_parent_right="true"
            ohos:height="32vp"
            ohos:width="32vp"
            ohos:right_margin="15vp"
            ohos:image_src="$media:save"
            ohos:scale_mode="stretch"
            ohos:layout_alignment="center"
            />

    </DependentLayout>
    <DependentLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:weight="2.5"
        ohos:background_element="#00F0F0F0">
    <TextField
        ohos:id="$+id:diary_title"
        ohos:height="match_content"
        ohos:width="500px"
        ohos:hint="请输入日记的标题"
        ohos:align_parent_bottom="true"
        ohos:center_in_parent="true"
        ohos:text_size="17fp"
        ohos:hint_color="#999999"
        ohos:text_alignment="left"
        ohos:background_element="#00FFFFFF"
        ohos:element_cursor_bubble="$media:handxxx"
        />
</DependentLayout>
    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:top_padding="12vp"
        ohos:left_padding="42vp"
        ohos:right_padding="42vp"
        ohos:bottom_padding="160vp"
        ohos:weight="17.5"
        ohos:background_element="#00FF9900"
        ohos:orientation="vertical">

            <TextField
                ohos:id="$+id:content"
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:top_margin="3vp"
                ohos:text_size="37fp"
                ohos:multiple_lines="true"
                ohos:background_element="#00FFFFFF"
                ohos:element_cursor_bubble="$media:handxxx"
                ohos:text_alignment="left"
                />
</DirectionalLayout>

    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:padding="10vp"
        ohos:background_element="#00EFEFEF"
        ohos:weight="1"
        ohos:orientation="horizontal">
        <Text
            ohos:id="$+id:diaryadd_botbar_bigtextsize"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:align_parent_left="true"
            ohos:left_margin="10vp"
            ohos:text="B"
            ohos:text_color="#FF000000"
            ohos:text_size="20vp"
            ohos:text_alignment="center"
            />
        <Text
            ohos:id="$+id:diaryadd_botbar_smalltextsize"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:align_parent_left="true"
            ohos:left_margin="10vp"
            ohos:text="S"
            ohos:text_color="#FF000000"
            ohos:text_size="20vp"
            ohos:text_alignment="center"
            />
        <Text
            ohos:id="$+id:diaryadd_botbar_suojin"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:align_parent_left="true"
            ohos:left_margin="10vp"
            ohos:text="缩进"
            ohos:text_color="#FF000000"
            ohos:text_size="20vp"
            ohos:text_alignment="center"
            />

        <Text
            ohos:id="$+id:diaryadd_botbar_huanhang"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:align_parent_left="true"
            ohos:left_margin="10vp"
            ohos:text="换行"
            ohos:text_color="#FF000000"
            ohos:text_size="20vp"
            ohos:text_alignment="center"
            />
        <Text
            ohos:id="$+id:diaryadd_botbar_image"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:align_parent_left="true"
            ohos:left_margin="10vp"
            ohos:text="图片"
            ohos:text_color="#FF000000"
            ohos:text_size="20vp"
            ohos:text_alignment="center"
            />

</DirectionalLayout>
</DirectionalLayout>