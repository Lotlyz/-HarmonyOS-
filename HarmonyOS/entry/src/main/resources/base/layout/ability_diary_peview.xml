<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$media:diarybackground1"
    ohos:orientation="vertical">
    <DependentLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:layout_alignment="bottom"
        ohos:orientation="horizontal"
        ohos:weight="1"
        ohos:background_element="#00F0F0F0">
        <Image
            ohos:id="$+id:diary_preview_back"
            ohos:left_of="$id:dongtaitext"
            ohos:center_in_parent="true"
            ohos:align_parent_left="true"
            ohos:height="23vp"
            ohos:width="23vp"
            ohos:left_margin="10vp"
            ohos:right_margin="15vp"
            ohos:image_src="$media:topbarback"
            ohos:scale_mode="stretch"
            ohos:layout_alignment="center"
            />

        <Text
            ohos:id="$+id:diary_preview_topbar_diary"
            ohos:height="50vp"
            ohos:width="match_content"
            ohos:align_parent_left="true"
            ohos:left_margin="35vp"
            ohos:text="日记"
            ohos:text_color="#FF000000"
            ohos:text_size="18vp"
            ohos:text_alignment="center"
            />
        <Text
            ohos:id="$+id:diary_preview_topbar_date"
            ohos:height="50vp"
            ohos:width="match_content"
            ohos:right_margin="100vp"
            ohos:align_parent_right="true"
            ohos:text="2021-12-22"
            ohos:text_color="#FF000000"
            ohos:text_size="18vp"
            ohos:text_alignment="center"
            />
        <Text
            ohos:id="$+id:diary_preview_topbar_book"
            ohos:height="50vp"
            ohos:width="match_content"
            ohos:align_parent_right="true"
            ohos:text="默认笔记本"
            ohos:text_color="#FF000000"
            ohos:text_size="16vp"
            ohos:text_alignment="center"
            ohos:right_margin="15vp"
            />
    </DependentLayout>
    <DependentLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:weight="2.5"
        ohos:background_element="#00F0F0F0">
    <Text
        ohos:id="$+id:diary_preview_title"
        ohos:height="match_content"
        ohos:width="500px"
        ohos:hint="日记的标题"
        ohos:align_parent_bottom="true"
        ohos:center_in_parent="true"
        ohos:text_size="20fp"
        ohos:hint_color="#999999"
        ohos:text_alignment="center"
        ohos:background_element="#00FF2626"
        ohos:element_cursor_bubble="$media:handxxx"
        />
</DependentLayout>
    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:top_padding="12vp"
        ohos:left_padding="42vp"
        ohos:right_padding="42vp"
        ohos:bottom_padding="160vp"
        ohos:weight="17.5"
        ohos:background_element="#00CA9E3D"
        ohos:orientation="vertical">
            <Text
                ohos:id="$+id:diary_preview_content"
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:top_margin="3vp"
                ohos:text_size="23fp"
                ohos:multiple_lines="true"
                ohos:background_element="#00F31E1E"
                ohos:truncation_mode="auto_scrolling"
                ohos:scrollable="true"
                ohos:text_alignment="left"
                />
</DirectionalLayout>
</DirectionalLayout>