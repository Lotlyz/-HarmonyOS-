<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:left_padding="20vp"
    ohos:right_padding="20vp"
    ohos:alignment="center"
    ohos:background_element="#FFFFFFFF"
    >
    <DependentLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:orientation="vertical"
        ohos:background_element="#FFFFFF"
        >
        <TextField
            ohos:id="$+id:moodupdata_image"
            ohos:height="700px"
            ohos:width="match_parent"
            ohos:text_size="20fp"
            ohos:margin="5vp"
            ohos:hint="请输入图片网址："
            ohos:hint_color="#FF5A5A5A"
            ohos:element_cursor_bubble="$media:handxxx"
            ohos:layout_alignment="center"
            />
        <TextField
            ohos:id="$+id:moodupdata_sheying"
            ohos:below="$id:moodupdata_image"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_size="13fp"
            ohos:margin="5vp"
            ohos:hint="摄影 | "
            ohos:hint_color="#FF5A5A5A"
            ohos:element_cursor_bubble="$media:handxxx"
            />
        <TextField
            ohos:id="$+id:moodupdata_sheyingzhe"
            ohos:below="$id:moodupdata_image"
            ohos:right_of="$id:moodupdata_sheying"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_size="13fp"
            ohos:margin="5vp"
            ohos:hint="Lotlyz"
            ohos:hint_color="#FF5A5A5A"
            ohos:element_cursor_bubble="$media:handxxx"
            />
        <TextField
            ohos:id="$+id:moodupdata_mood"
            ohos:below="$id:moodupdata_sheying"
            ohos:height="400px"
            ohos:width="match_parent"
            ohos:padding="30vp"
            ohos:text_size="16fp"
            ohos:multiple_lines="true"
            ohos:hint="lim我=你↔♥即使给我整个世界，我也只在你的身边♥"
            ohos:hint_color="#FF5A5A5A"
            ohos:element_cursor_bubble="$media:handxxx"
            />
        <TextField
            ohos:id="$+id:moodupdata_date"
            ohos:below="$id:moodupdata_mood"
            ohos:align_parent_left="true"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_alignment="center"
            ohos:text_size="13fp"
            ohos:left_margin="8vp"
            ohos:right_margin="8vp"
            ohos:hint="2021-12-8"
            ohos:hint_color="#FF5A5A5A"
            ohos:element_cursor_bubble="$media:handxxx"
            />
        <TextField
            ohos:id="$+id:moodupdata_address"
            ohos:below="$id:moodupdata_mood"
            ohos:right_of="$+id:moodupdata_date"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_alignment="center"
            ohos:text_size="13fp"
            ohos:hint="南宁"
            ohos:hint_color="#FF5A5A5A"
            ohos:element_cursor_bubble="$media:handxxx"
            />
        <TextField
            ohos:id="$+id:moodupdata_author"
            ohos:below="$id:moodupdata_mood"
            ohos:align_parent_right="true"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_alignment="center"
            ohos:text_size="20fp"
            ohos:left_margin="3vp"
            ohos:right_margin="8vp"
            ohos:hint="Lotlyz"
            ohos:hint_color="#FF5A5A5A"
            ohos:element_cursor_bubble="$media:handxxx"
            />

        <Button
            ohos:id="$+id:moodupdata_sava"
            ohos:height="64px"
            ohos:width="64px"
            ohos:background_element="$media:save"
            ohos:align_parent_top="true"
            ohos:align_parent_right="true"
            ohos:margin="10vp"
            />
    </DependentLayout>


</DirectionalLayout>