<?xml version="1.0" encoding="utf-8"?>

<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:top_padding="60vp"
    ohos:left_padding="20vp"
    ohos:right_padding="20vp"
    ohos:alignment="center"
    ohos:background_element="#FFFFFFFF"
    >
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:background_element="#FFFFFF"
    >

    <TextField
        ohos:id="$+id:moodadd_image"
        ohos:height="500px"
        ohos:width="200vp"
        ohos:text_size="20fp"
        ohos:margin="5vp"
        ohos:hint="请输入图片网址："
        ohos:hint_color="#FF5A5A5A"
        ohos:element_cursor_bubble="$media:handxxx"
        ohos:layout_alignment="left"
        />
    <Button
        ohos:id="$+id:moodimagepiker"
        ohos:height="30vp"
        ohos:width="40vp"
        ohos:text="选择图片"
        ohos:text_size="24fp"
        ohos:text_color="#FEFEFE"
        ohos:text_alignment="center"
        ohos:background_element="$graphic:beautifulloginbutton"
        ohos:right_of="$id:moodadd_image"
        ohos:top_margin="72vp"
        ohos:align_parent_right="true"
        />
    <TextField
        ohos:id="$+id:moodadd_sheying"
        ohos:below="$id:moodadd_image"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_size="13fp"
        ohos:margin="5vp"
        ohos:hint="摄影 | "
        ohos:hint_color="#FF5A5A5A"
        ohos:element_cursor_bubble="$media:handxxx"
        />
    <TextField
        ohos:id="$+id:moodadd_sheyingzhe"
        ohos:below="$id:moodadd_image"
        ohos:right_of="$id:moodadd_sheying"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_size="13fp"
        ohos:margin="5vp"
        ohos:hint="Lotlyz"
        ohos:hint_color="#FF5A5A5A"
        ohos:element_cursor_bubble="$media:handxxx"
        />
    <TextField
        ohos:id="$+id:moodadd_mood"
        ohos:below="$id:moodadd_sheying"
        ohos:height="400px"
        ohos:width="match_parent"
        ohos:padding="30vp"
        ohos:text_size="16fp"
        ohos:multiple_lines="true"
        ohos:hint="lim我=你↔♥即使给我整个世界，我也只在你的身边♥"
        ohos:hint_color="#FF5A5A5A"
        ohos:element_cursor_bubble="$media:handxxx"
        />
    <TextField
        ohos:id="$+id:moodadd_date"
        ohos:below="$id:moodadd_mood"
        ohos:align_parent_left="true"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_alignment="center"
        ohos:text_size="13fp"
        ohos:left_margin="8vp"
        ohos:right_margin="8vp"
        ohos:hint="2021-12-8"
        ohos:hint_color="#FF5A5A5A"
        ohos:element_cursor_bubble="$media:handxxx"
        />
    <TextField
        ohos:id="$+id:moodadd_address"
        ohos:below="$id:moodadd_mood"
        ohos:right_of="$+id:moodadd_date"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_alignment="center"
        ohos:text_size="13fp"
        ohos:hint="南宁"
        ohos:hint_color="#FF5A5A5A"
        ohos:element_cursor_bubble="$media:handxxx"
        />
    <TextField
        ohos:id="$+id:moodadd_author"
        ohos:below="$id:moodadd_mood"
        ohos:align_parent_right="true"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_alignment="center"
        ohos:text_size="20fp"
        ohos:left_margin="3vp"
        ohos:right_margin="8vp"
        ohos:hint="Lotlyz"
        ohos:hint_color="#FF5A5A5A"
        ohos:element_cursor_bubble="$media:handxxx"
        />
</DependentLayout>

    <Button
        ohos:id="$+id:moodadd_sava"
        ohos:height="64px"
        ohos:width="64px"
        ohos:background_element="$media:save"
        ohos:top_margin="20vp"
        />
</DirectionalLayout>