<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    ohos:id="$+id:registerdir"
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <Button
        ohos:id="$+id:register_back"
        ohos:height="64px"
        ohos:width="64px"
        ohos:background_element="$media:pageback"
        ohos:margin="10vp"
        ohos:layout_alignment="left"
        />

    <DependentLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="120vp"
        ohos:width="match_parent"
        ohos:top_margin="180vp"
        ohos:background_element="#00888888"
        ohos:orientation="horizontal">
        <Image
            ohos:height="128px"
            ohos:width="128px"
            ohos:image_src="$media:FANSIlog"
            ohos:align_parent_left="true"
            ohos:center_in_parent="true"
            ohos:scale_mode="stretch"
            />
        <Text
            ohos:id="$+id:loginwelcom"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="Welcome"
            ohos:center_in_parent="true"
            ohos:text_size="72fp"
            ohos:text_color="#F2FF753F"
            />
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:top_margin="100vp"
            ohos:align_parent_right="true"
            ohos:text="LotDay,记录你的每一天"
            ohos:text_size="17fp"
            ohos:text_color="#F2FF5000"
            />
    </DependentLayout>
    <DependentLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="50vp"
        ohos:width="match_parent"
        ohos:top_margin="80vp"
        ohos:background_element="$graphic:Loginbeautiful"
        ohos:orientation="horizontal">
    <Image
        ohos:height="72px"
        ohos:width="72px"
        ohos:left_margin="10vp"
        ohos:image_src="$media:loginname"
        ohos:align_parent_left="true"
        ohos:center_in_parent="true"
        ohos:scale_mode="stretch"
        />
    <TextField
        ohos:id="$+id:register_name"
        ohos:height="50vp"
        ohos:width="350vp"
        ohos:hint="请输入昵称"
        ohos:text_size="17fp"
        ohos:hint_color="#FFFF8454"
        ohos:text_alignment="center"
        ohos:center_in_parent="true"
        ohos:background_element="#00FFFFFF"
        ohos:element_cursor_bubble="$media:handxxx"
        />
    </DependentLayout>
    <DependentLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="50vp"
        ohos:width="match_parent"
        ohos:top_margin="10vp"
        ohos:background_element="$graphic:Loginbeautiful"
        ohos:orientation="horizontal">
    <Image
        ohos:height="72px"
        ohos:width="72px"
        ohos:left_margin="10vp"
        ohos:image_src="$media:loginphone"
        ohos:align_parent_left="true"
        ohos:center_in_parent="true"
        ohos:scale_mode="stretch"
        />
    <TextField
        ohos:id="$+id:register_phone"
        ohos:height="50vp"
        ohos:width="350vp"
        ohos:hint="请输入手机号"
        ohos:text_size="17fp"
        ohos:hint_color="#FFFF8454"
        ohos:text_alignment="center"
        ohos:center_in_parent="true"
        ohos:background_element="#00FFFFFF"
        ohos:element_cursor_bubble="$media:handxxx"
        />
    </DependentLayout>
    <DependentLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="50vp"
        ohos:width="match_parent"
        ohos:top_margin="10vp"
        ohos:background_element="$graphic:Loginbeautiful"
        ohos:orientation="horizontal">
        <Image
            ohos:height="72px"
            ohos:width="72px"
            ohos:left_margin="10vp"
            ohos:image_src="$media:loginpassword"
            ohos:align_parent_left="true"
            ohos:center_in_parent="true"
            ohos:scale_mode="stretch"
            />
    <TextField
        ohos:id="$+id:register_password"
        ohos:height="50vp"
        ohos:width="350vp"
        ohos:hint="请输入密码"
        ohos:text_size="17fp"
        ohos:hint_color="#FFFF8454"
        ohos:text_alignment="center"
        ohos:background_element="#00FFFFFF"
        ohos:center_in_parent="true"
        ohos:text_input_type="pattern_password"
        ohos:element_cursor_bubble="$media:handxxx"
        />
</DependentLayout>

<Button
        ohos:id="$+id:register_register"
        ohos:height="47vp"
        ohos:width="300vp"
        ohos:text="注册"
        ohos:text_size="24fp"
        ohos:text_color="#FEFEFE"
        ohos:text_alignment="center"
        ohos:background_element="$graphic:beautifulloginbutton"
        ohos:top_margin="45vp"
        ohos:layout_alignment="horizontal_center"

        />

</DirectionalLayout>