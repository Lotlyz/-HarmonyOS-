<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <Button
        ohos:id="$+id:timeadd_save"
        ohos:height="64px"
        ohos:width="64px"
        ohos:background_element="$media:save"
        ohos:margin="10vp"
        ohos:layout_alignment="left"
        />

    <Clock
        ohos:id="$+id:top_clock"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:layout_alignment="horizontal_center"
        ohos:text_size="25fp"
        ohos:time_zone="GMT"
        ohos:top_margin="30vp"
        ohos:bottom_margin="30vp"
        />
    <TextField
        ohos:id="$+id:timedate"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:top_margin="3vp"
        ohos:hint="2021-12-28"
        ohos:text_size="20fp"
        ohos:multiple_lines="true"
        ohos:background_element="#FFFFFFFF"
        ohos:element_cursor_bubble="$media:handxxx"
        ohos:text_alignment="left"
        />

    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:orientation="horizontal"
        ohos:padding="10vp">

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="60vp"
            ohos:text="开始时间"
            ohos:text_color="#888888"
            ohos:text_size="20fp"
            />

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="120vp"
            ohos:text="结束时间"
            ohos:text_color="#888888"
            ohos:text_size="20fp"
            />
    </DirectionalLayout>


    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="200vp"
        ohos:width="match_content"
        ohos:orientation="horizontal"
        ohos:padding="10vp">

        <TimePicker
            ohos:id="$+id:time_add_start"
            ohos:height="200vp"
            ohos:width="200vp"
            ohos:mode_24_hour="true"
            ohos:normal_text_size="30vp"
            ohos:selected_text_size="35vp"
            ohos:selected_text_color="#FF45A5FF"
            ohos:selector_item_num="3"
            ohos:operated_text_color="#FFFF0D58"
            ohos:shader_color="#00BFFF"
            ohos:background_element="$graphic:background_diary_card"
            />

        <TimePicker
            ohos:id="$+id:time_add_end"
            ohos:height="200vp"
            ohos:width="200vp"
            ohos:left_margin="10vp"
            ohos:mode_24_hour="true"
            ohos:normal_text_size="30vp"
            ohos:selected_text_size="35vp"
            ohos:selected_text_color="#FF45A5FF"
            ohos:selector_item_num="3"
            ohos:operated_text_color="#FFFF0D58"
            ohos:shader_color="#00BFFF"
            ohos:background_element="$graphic:background_diary_card"
            />
    </DirectionalLayout>

        <ListContainer
            ohos:id="$+id:timeaddtypelistcontainer"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:top_margin="60vp"
            ohos:background_element="#FFFFFFFF"/>
    <DependentLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:left_padding="20vp"
        ohos:right_padding="20vp"
        ohos:orientation="horizontal"
        >
    <Text
        ohos:id="$+id:timeadd_remarktx"
        ohos:height="50vp"
        ohos:width="50vp"
        ohos:text_alignment="center"
        ohos:top_margin="10vp"
        ohos:text_size="17fp"
        ohos:text="备注："
        />
    <TextField
        ohos:id="$+id:timeadd_remarks"
        ohos:align_parent_top="true"
        ohos:right_of="$id:timeadd_remarktx"
        ohos:height="50vp"
        ohos:width="match_parent"
        ohos:text_alignment="center"
        ohos:text_size="17fp"
        ohos:element_cursor_bubble="$media:handxxx"
        ohos:basement="#FF7E7E7E"
        />
    </DependentLayout>
</DirectionalLayout>