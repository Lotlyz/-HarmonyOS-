<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <Button
        ohos:id="$+id:timeupdata_save"
        ohos:height="64px"
        ohos:width="64px"
        ohos:background_element="$media:save"
        ohos:margin="10vp"
        ohos:layout_alignment="left"
        />

    <Clock
        ohos:id="$+id:updata_top_clock"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:layout_alignment="horizontal_center"
        ohos:text_size="25fp"
        ohos:time_zone="GMT"
        ohos:top_margin="30vp"
        ohos:bottom_margin="30vp"
        />
    <TextField
        ohos:id="$+id:timedate"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:top_margin="3vp"
        ohos:hint="2021-12-28"
        ohos:text_size="20fp"
        ohos:multiple_lines="true"
        ohos:background_element="#FFFFFFFF"
        ohos:element_cursor_bubble="$media:handxxx"
        ohos:text_alignment="left"
        />
    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:orientation="horizontal"
        ohos:padding="10vp">

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="60vp"
            ohos:text="开始时间"
            ohos:text_color="#888888"
            ohos:text_size="20fp"
            />

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="120vp"
            ohos:text="结束时间"
            ohos:text_color="#888888"
            ohos:text_size="20fp"
            />
    </DirectionalLayout>


    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="200vp"
        ohos:width="match_content"
        ohos:orientation="horizontal"
        ohos:padding="10vp">

        <TimePicker
            ohos:id="$+id:time_updata_start"
            ohos:height="200vp"
            ohos:width="200vp"
            ohos:mode_24_hour="true"
            ohos:normal_text_size="30vp"
            ohos:selected_text_size="35vp"
            ohos:selected_text_color="#FF45A5FF"
            ohos:selector_item_num="3"
            ohos:operated_text_color="#FFFF0D58"
            ohos:shader_color="#00BFFF"
            ohos:background_element="$graphic:background_diary_card"
            />

        <TimePicker
            ohos:id="$+id:time_updata_end"
            ohos:height="200vp"
            ohos:width="200vp"
            ohos:left_margin="10vp"
            ohos:mode_24_hour="true"
            ohos:normal_text_size="30vp"
            ohos:selected_text_size="35vp"
            ohos:selected_text_color="#FF45A5FF"
            ohos:selector_item_num="3"
            ohos:operated_text_color="#FFFF0D58"
            ohos:shader_color="#00BFFF"
            ohos:background_element="$graphic:background_diary_card"
            />
    </DirectionalLayout>
<DependentLayout
    ohos:height="match_content"
    ohos:width="match_content"
    >
    <Text
        ohos:id="$+id:timeupdatxtype"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:top_margin="50vp"
        ohos:text="时间类型:"
        ohos:text_size="20fp"
        ohos:text_color="#000000"
        ohos:text_alignment="center"
        />
    <TextField
        ohos:id="$+id:timeupdata_type"
        ohos:right_of="$+id:timeupdatxtype"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:hint="时间类型"
        ohos:hint_color="#FF000000"
        ohos:text_alignment="center"
        ohos:text_size="20fp"
        ohos:top_margin="50vp"
        ohos:left_margin="10vp"
        ohos:layout_alignment="horizontal_center"
        ohos:background_element="#ffffff"
        ohos:element_cursor_bubble="$media:handxxx"
        />
</DependentLayout>
    <DependentLayout
        ohos:height="match_content"
        ohos:width="match_content"
        >
        <Text
            ohos:id="$+id:timeupdatxremarks"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:top_margin="50vp"
            ohos:text="备注:"
            ohos:text_size="20fp"
            ohos:text_color="#000000"
            ohos:text_alignment="center"
            />
        <TextField
            ohos:id="$+id:timeupdata_remarks"
            ohos:right_of="$+id:timeupdatxremarks"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:hint="时间类型"
            ohos:hint_color="#FF000000"
            ohos:text_alignment="center"
            ohos:text_size="20fp"
            ohos:top_margin="50vp"
            ohos:left_margin="10vp"
            ohos:layout_alignment="horizontal_center"
            ohos:background_element="#ffffff"
            ohos:element_cursor_bubble="$media:handxxx"
            />
    </DependentLayout>
</DirectionalLayout>