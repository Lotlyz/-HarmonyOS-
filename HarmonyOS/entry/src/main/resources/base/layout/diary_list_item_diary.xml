<?xml version="1.0" encoding="utf-8"?>

<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    xmlns:app="http://schemas.ohos.com/apk/res/ohos"
    ohos:height="122vp"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:padding="2vp"
    ohos:background_element="#00888888"
    >
    <Component
        ohos:height="1vp"
        ohos:width="366vp"
        ohos:layout_alignment="center"
        ohos:background_element="#FF949494"
        />
    <com.example.lotday2.utils.SwipeDragLayout
        ohos:id="$+id:swipe"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="#$graphic:background_diary_card"
        ohos:orientation="vertical"
        app:swipe_direction="left"
        app:swipe_enable="true"
        app:spring_back="true"
        >
    <DependentLayout
    ohos:id="$+id:itemdiaryde"
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="horizontal"
    ohos:bottom_margin="5vp"
    ohos:background_element="#00EEEEEE"
    >
        <DependentLayout
            ohos:id="$+id:itemdiaryde2"
            xmlns:ohos="http://schemas.huawei.com/res/ohos"
            ohos:height="120vp"
            ohos:width="45vp"
            ohos:orientation="vertical"
            ohos:align_parent_left="true"
            ohos:left_margin="26vp"
            ohos:background_element="#00FFFFFF"
            >

            <Text
                ohos:id="$+id:diary_date_day"
                ohos:height="25vp"
                ohos:width="match_content"
                ohos:text_size="25fp"
                ohos:align_parent_left="true"
                ohos:top_margin="20vp"
                ohos:left_margin="5vp"
                ohos:text_color="#000000"
                ohos:text="22"
                />
            <Text
                ohos:id="$+id:diary_date_month"
                ohos:below="$+id:diary_date_day"
                ohos:height="25vp"
                ohos:width="match_content"
                ohos:text_size="18fp"
                ohos:align_parent_left="true"
                ohos:text_color="#888888"
                ohos:top_margin="2vp"
                ohos:left_margin="5vp"
                ohos:text="12"
                />
            <Text
                ohos:id="$+id:diary_date_year"
                ohos:below="$+id:diary_date_month"
                ohos:height="25vp"
                ohos:width="match_content"
                ohos:text_size="13fp"
                ohos:align_parent_left="true"
                ohos:text_color="#888888"
                ohos:top_margin="2vp"
                ohos:left_margin="5vp"
                ohos:text="2021"
                />
        </DependentLayout>
        <Component
            ohos:height="80vp"
            ohos:width="1vp"
            ohos:top_margin="20vp"
            ohos:left_margin="71vp"
            ohos:background_element="#FF949494"
            />
    <DependentLayout
        ohos:id="$+id:itemdiaryde3"
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="120vp"
        ohos:width="228vp"
        ohos:padding="10vp"
        ohos:left_margin="1vp"
        ohos:right_of="$+id:itemdiaryde2"
        ohos:orientation="horizontal"
        ohos:background_element="#00FFFFFF"
        >
    <Text
            ohos:id="$+id:diary_title"
            ohos:height="match_content"
            ohos:center_in_parent="true"
            ohos:width="228vp"
            ohos:margin="10vp"
            ohos:text_size="16fp"
            ohos:text="今日目标进度"
            ohos:text_alignment="center"
            ohos:background_element="#00FFFFFF"
            />
    </DependentLayout>
    <DependentLayout
        ohos:id="$+id:itemdiaryde4"
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="120vp"
        ohos:width="120vp"
        ohos:orientation="horizontal"
        ohos:align_parent_right="true"
        ohos:right_margin="20vp"
        ohos:background_element="#00FFFFFF"
        >
    <Image
        ohos:id="$+id:diary_itemimage"
        ohos:center_in_parent="true"
        ohos:height="100vp"
        ohos:width="100vp"
        ohos:image_src="$media:diaryitemimage1"
        ohos:scale_mode="stretch"
        ohos:layout_alignment="center"
        />
    </DependentLayout>
</DependentLayout>
        <DirectionalLayout
            ohos:id="$+id:mRoot"
            ohos:height="match_parent"
            ohos:width="match_content"
            ohos:orientation="horizontal">
            <Image
                ohos:id="$+id:diary_item_edit"
                ohos:height="100vp"
                ohos:width="70vp"
                ohos:background_element="#4cd964"
                ohos:clip_alignment="center"
                ohos:image_src="$media:edit"
                ohos:layout_alignment="center"/>

            <Image
                ohos:id="$+id:diary_item_dele"
                ohos:height="100vp"
                ohos:width="70vp"
                ohos:background_element="#FFFF2700"
                ohos:image_src="$media:trash"
                ohos:layout_alignment="center"/>
        </DirectionalLayout>
</com.example.lotday2.utils.SwipeDragLayout>
</DirectionalLayout>