<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:orientation="horizontal"
    ohos:bottom_margin="10vp"
    ohos:background_element="#FFFFFFFF"
    >
<DependentLayout
    ohos:id="$+id:moodlinnitemde1"
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_content"
    ohos:orientation="horizontal"
    ohos:alignment="left"
    ohos:margin="1vp"
    ohos:weight="1"
    ohos:background_element="$graphic:background_diary_card"
    >
    <Image
        ohos:id="$+id:moodlnnimage1"
        ohos:height="1080px"
        ohos:width="match_parent"
        ohos:image_src="$media:tx"
        ohos:scale_mode="stretch"
        ohos:layout_alignment="center"
        />
    <Text
        ohos:id="$+id:moodlnnimage1_authour"
        ohos:below="$id:moodlnnimage1"
        ohos:height="20vp"
        ohos:width="match_content"
        ohos:text_size="13fp"
        ohos:margin="5vp"
        ohos:center_in_parent="true"
        ohos:text="Lotlyz"
        />
</DependentLayout>
</DirectionalLayout>