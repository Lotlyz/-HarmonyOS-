<?xml version="1.0" encoding="utf-8"?>

<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    xmlns:app="http://schemas.ohos.com/apk/res/ohos"
    ohos:height="75vp"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:margin="2vp"
    ohos:background_element="#FFFFFFFF"
    >
    <Text
        ohos:id="$+id:time_timedate"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_size="20fp"
        ohos:align_parent_left="true"
        ohos:text="2021-12-22"
        />
    <com.example.lotday2.utils.SwipeDragLayout
        ohos:id="$+id:swipe"
        ohos:height="50vp"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_diary_card"
        ohos:orientation="horizontal"
        app:swipe_direction="left"
        app:swipe_enable="true"
        app:spring_back="true"
        >
<DependentLayout
    ohos:id="$+id:itemtimede"
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="50vp"
    ohos:padding="10vp"
    ohos:width="match_parent"
    ohos:orientation="horizontal"

    >
    <Text
            ohos:id="$+id:time_timeline"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_size="20fp"
            ohos:align_parent_left="true"
            ohos:text="00:00~07:30"
            />

    <Text
        ohos:id="$+id:time_type"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_size="20fp"
ohos:horizontal_center="true"
        ohos:text="睡觉"
        />
    <Text
            ohos:id="$+id:time_duration"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_size="20fp"
            ohos:align_parent_right="true"
            ohos:text="7.5小时"
            />
</DependentLayout>

        <DirectionalLayout
            ohos:id="$+id:mRoot"
            ohos:height="match_parent"
            ohos:width="match_content"
            ohos:orientation="horizontal">
            <Image
                ohos:id="$+id:time_item_edit"
                ohos:height="50vp"
                ohos:width="70vp"
                ohos:background_element="#4cd964"
                ohos:clip_alignment="center"
                ohos:image_src="$media:edit"
                ohos:layout_alignment="center"/>

            <Image
                ohos:id="$+id:time_item_dele"
                ohos:height="50vp"
                ohos:width="70vp"
                ohos:background_element="#FFFF2700"
                ohos:image_src="$media:trash"
                ohos:layout_alignment="center"/>
        </DirectionalLayout>
    </com.example.lotday2.utils.SwipeDragLayout>
</DirectionalLayout>